                    &emsp; &emsp;&emsp; &emsp;&emsp; &emsp;&emsp;&emsp; &emsp;
                    <br><br>
                    <li>
                        &emsp; &emsp;&emsp; &emsp;&emsp; &emsp;&emsp;&emsp; &emsp;
                        &emsp; &emsp;&emsp; &emsp;&emsp; &emsp;&emsp;&emsp; &emsp;
                        &emsp; &emsp; &emsp;&emsp; &emsp;&emsp; &emsp;&emsp;&emsp; &emsp;
                        <a href="/Homepage">Home</a>
                    </li>

                    <li>
                        <a onclick=history.back()>Go back to my profile</a>
                    </li>
                </ul>
            </nav>
        </header>
        <br><br><br><br>
        <div class="heading">
            <div class="title">
                <h2>List of Current Interns</h2>
            </div>
            <br><br><br>
        </div>
        <br><br><br><br><br><br>
        <div class="interns">
            <% for(var i=0;i<interns.length;i++){ %>
                <div class="card" onclick="openForm(<%= interns[i] %>)">
                    <img src="/public/images/men.png" alt="Avatar" style="width:100%">
                    <div class="cardcontainer">
                        <h4 id="name">
                            <%= interns[i].Name %>
                        </h4>
                        <p>
                            <%= interns[i].Domain %>
                        </p>
                    </div>
                </div>
                <% if(i+1 %7==0) { %>
                         <br><br><br><br>&nbsp;
                   <%}%>
                <% } %>
        </div>
    </div>

    <div class="block" id="myForm" style="font-family: Verdana, Geneva, Tahoma, sans-serif;">
        <div class="userimage">
            <image src="/public/images/user.jpg" width="300" height="300"></image>
            <p class="mail" id="mailid">&nbsp;</p>
        </div>
        <div class="details" style="font-family: Verdana, Geneva, Tahoma, sans-serif;">
            <strong>
                <h1>
                    <p id="uname"></p>
                </h1>
            </strong></p>
            <p id="id"></p>
            <p id="about"></p>
            <p><b>skills : </b></p>
            <p id="skills"></p>
            <br>
            <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
        </div>
    </div>
</body>

</html>
